{
  "name": "gtr-cof",
  "version": "1.0.0",
  "description": "gtr-cof",
  "scripts": {
    "clean": "rm -rf docs/scripts",
    "build:dist": "NODE_ENV=production webpack",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "lite": "lite-server --baseDir=\"docs\" --port 10001",
    "start": "npm run lite",
    "dev": "concurrently --raw --kill-others 'npm run start' 'npm run type-check -- -w' 'npm run watch' ",
    "precommit": "lint-staged",
    "prepush": "npm run type-check",
    "prettier": "npm run prettier",
    "type-check": "tsc --noEmit --pretty",
    "watch": "NODE_ENV=development webpack --watch"
  },
  "author": "Mike Hadlow",
  "license": "MIT",
  "repository": "https://github.com/mikehadlow/gtr-cof",
  "devDependencies": {
    "@types/d3": "3.5.41",
    "@types/webmidi": "2.0.2",
    "concurrently": "4.0.1",
    "d3": "^3.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "lite-server": "^1.3.1",
    "prettier": "^1.14.2",
    "ts-loader": "5.1.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3",
    "webpack": "4.19.0",
    "webpack-cli": "3.1.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "tabWidth": 4,
    "printWidth": 120
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint -c tslint.json --fix",
      "npm run prettier",
      "git add"
    ]
  }
}
