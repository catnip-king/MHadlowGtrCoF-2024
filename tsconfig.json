        "baseUrl": "src",
        "downlevelIteration": true,
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "module": "es2015",
        "moduleResolution": "node",
        "pretty": true,
        "strict": true,
        "types": ["@types/d3", "@types/webmidi"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "docs"]
}
